<div class="container p-4 my-5 bg-light">
    <h1 style="color:blue">Vista de Productos</h1><br>
    <% if (products.length > 0) { %>
    <table class="table table-dark">
        <thead>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </thead>
        <tbody>
            <% products.forEach( product => { %>
                <tr>
                    <td><%= product.title%></td>
                    <td><%= product.price%></td>
                    <td><img src=<%= product.thumbnail %> height="50rem"></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <% } else { %>
        <h3 style="background-color:aquamarine">No se encontraron productos</h3><br>
    <% } %>
    <form action="/" method="GET">
        <button type="submit" class="btn btn-primary">Ir al formulario de carga de productos</button>
    </form>
</div>